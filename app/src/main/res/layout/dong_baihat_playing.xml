<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/viewItemBaiHatDangPhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.joooonho.SelectableRoundedImageView
            app:sriv_left_top_corner_radius="6dp"
            app:sriv_right_top_corner_radius="6dp"
            app:sriv_left_bottom_corner_radius="6dp"
            app:sriv_right_bottom_corner_radius="6dp"
            android:id="@+id/imageviewbaihat_playing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/textviewtenbaihat_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:layout_toRightOf="@id/imageviewbaihat_playing"
            android:layout_alignTop="@id/imageviewbaihat_playing"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/textviewtencasi_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageviewbaihat_playing"
            android:layout_below="@id/textviewtenbaihat_playing"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:textColor="#D5D0D0"
            android:text="Ca sĩ"
            android:maxLines="1"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/btnpopup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_popupmenu"
        android:layout_alignTop="@id/viewItemBaiHatDangPhat"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"/>
</RelativeLayout>