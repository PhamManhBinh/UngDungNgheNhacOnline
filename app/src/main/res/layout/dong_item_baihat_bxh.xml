<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textviewNumber_bxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30dp"
        android:textColor="#E759FF"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <com.joooonho.SelectableRoundedImageView
        app:sriv_left_top_corner_radius="6dp"
        app:sriv_right_top_corner_radius="6dp"
        app:sriv_left_bottom_corner_radius="6dp"
        app:sriv_right_bottom_corner_radius="6dp"
        android:id="@+id/imageviewBaiHat_bxh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/textviewNumber_bxh"/>
    <TextView
        android:id="@+id/textviewTenBaiHat_bxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#F1EEEE"
        android:maxLines="1"
        android:layout_alignTop="@id/imageviewBaiHat_bxh"
        android:layout_toRightOf="@id/imageviewBaiHat_bxh"
        />
    <TextView
        android:id="@+id/textviewTenCaSi_bxh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên ca sĩ"
        android:maxLines="1"
        android:textColor="#EAE3E3"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewTenBaiHat_bxh"
        android:layout_toRightOf="@id/imageviewBaiHat_bxh"
        />
    <ImageView
        android:id="@+id/dong_item_baihat_bxh_love"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/heart_empty"
        android:layout_alignTop="@id/textviewTenBaiHat_bxh"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/textViewLuotThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1k"
        android:layout_below="@id/dong_item_baihat_bxh_love"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>
</RelativeLayout>