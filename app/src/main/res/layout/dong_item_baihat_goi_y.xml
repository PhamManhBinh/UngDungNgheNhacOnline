<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageviewBaiHat_goi_y"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/textviewTenBaiHat_goi_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textSize="17sp"
        android:textColor="#F1EEEE"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_alignTop="@id/imageviewBaiHat_goi_y"
        android:layout_toRightOf="@id/imageviewBaiHat_goi_y"
        />
    <TextView
        android:id="@+id/textviewTenCaSi_goi_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên ca sĩ"
        android:maxLines="1"
        android:textSize="17sp"
        android:textColor="#EAE3E3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewTenBaiHat_goi_y"
        android:layout_toRightOf="@id/imageviewBaiHat_goi_y"
        />
    <ImageView
        android:id="@+id/dong_item_baihat_goi_y_love"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/heart_empty"
        android:layout_alignTop="@id/textviewTenBaiHat_goi_y"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
</RelativeLayout>